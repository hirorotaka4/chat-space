.message-box
  .message-box__contributor-info
    %p.message-box__contributor-info__user-name
      = message.user.name
    %p.message-box__contributor-info__daytime
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-box__message
    - if message.content.present?
      %p.message-box__message__content
        = message.content
    = image_tag message.image.url, class: 'message-box__message__image' if message.image.present?
