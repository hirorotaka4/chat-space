.side-bar
  .side-header
    .side-header__box
      %p.side-header__box__name 
        = current_user.name
      .side-header__box__icon
        = link_to new_group_path, class: "side-header__box__icon__new" do
          %i.far.fa-edit
        = link_to edit_user_path(current_user), class: "side-header__box__icon__edit" do
          %i.fa.fa-cog
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__latest  
            = group.show_last_message
